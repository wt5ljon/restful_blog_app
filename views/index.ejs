<% include partials/header.ejs %>

<h1>Index Page!</h1>
<div>
  <% posts.forEach(function(post) { %>
       <h2><%= post.title %></h2>
       <img src="<%= post.image %>">
       <p><em><%= post.created %></em></p>
       <p><%= post.body.substring(0, 100) %>...</p>  
       <a href="/blogs/<%= post._id %>">Read More</a>     
  <% }) %>
</div>

