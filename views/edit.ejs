<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit Post</div>
  <form class="ui form" action="/blogs/<%= post._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= post.title %>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" value="<%= post.image %>">
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]"><%= post.body %></textarea>
    </div>
    <input class="ui blue basic button" type="submit">
  </form>  
  <a href="/blogs/<%= post._id %>">Cancel</a>
</div>

<% include partials/footer %>